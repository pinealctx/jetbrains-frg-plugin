<idea-plugin>
    <id>com.pinealctx.frg</id>
    <name>FRG Language Support</name>
    <vendor email="silkage@silkage.net" url="https://github.com/pinealctx">PinealCtx</vendor>

    <description><![CDATA[
    Support for FRG language.<br>
    Features:
    <ul>
        <li>Syntax highlighting</li>
        <li>Go to definition for Types and Enums</li>
        <li>Structure view</li>
    </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="FRG File"
            implementationClass="com.pinealctx.frg.FrgFileType"
            fieldName="INSTANCE"
            language="FRG"
            extensions="frg"/>
        
        <lang.parserDefinition
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgParserDefinition"/>
            
        <lang.syntaxHighlighterFactory
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgSyntaxHighlighterFactory"/>
            
        <annotator
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgAnnotator"/>
            
        <lang.psiStructureViewFactory
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgStructureViewFactory"/>

        <lang.formatter
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgFormattingModelBuilder"/>

        <lang.commenter
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgCommenter"/>

        <lang.foldingBuilder
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgFoldingBuilder"/>

        <lang.findUsagesProvider
            language="FRG"
            implementationClass="com.pinealctx.frg.FrgFindUsagesProvider"/>

    </extensions>

    <actions>
        <action id="Frg.NewFile" class="com.pinealctx.frg.actions.FrgCreateFileAction"
                text="FRG File" description="Create new FRG file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>
